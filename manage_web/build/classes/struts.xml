<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="manage-base-package" extends="json-default">
		<!-- 拦截器 -->
		<interceptors>
			<interceptor name="permission"
				class="com.hifun.soul.manageweb.interceptor.PermissionInterceptor"></interceptor>
			<interceptor-stack name="jsonStack">
				<interceptor-ref name="json"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<!-- 全局转向 -->
		<global-results>
			<result name="error">/error.jsp</result>
			<result name="login">/index.jsp</result>
		</global-results>

		<!-- <global-exception-mappings> <exception-mapping result="error" exception="java.lang.Exception"></exception-mapping> 
			</global-exception-mappings> -->

		<!-- action -->
		<action name="index">
			<result>/index.jsp</result>
		</action>
	</package>
	<include file="struts-*.xml"></include>
</struts>