<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="struts-runtime" extends="manage-base-package">
		<!-- 获取服务器组信息 -->
		<action name="getRealmInfo" class="com.hifun.soul.manageweb.action.RuntimeAction"
			method="getRealmInfo">
			<result name="realmInfo">/runtime/realmInfo.jsp</result>
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 打开对外服务 -->
		<action name="startExternalService" class="com.hifun.soul.manageweb.action.RuntimeAction"
			method="startExternalService">
			<result name="realmInfo" type="chain">getRealmInfo</result>
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 关闭对外服务 -->
		<action name="stopExternalService" class="com.hifun.soul.manageweb.action.RuntimeAction"
			method="stopExternalService">
			<result name="realmInfo" type="chain">getRealmInfo</result>
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 获取游戏服务器列表 -->
		<action name="queryGameServerList"
			class="com.hifun.soul.manageweb.action.GameServerListAction"
			method="queryGameServerList">
			<result name="success">runtime/gameServerList.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 切换游戏服务器的连接 -->
		<action name="changeGameServer"
			class="com.hifun.soul.manageweb.action.GameServerListAction"
			method="changeGameServer">
			<result name="success" type="chain">queryGameServerList</result>
			<result name="failed" type="chain">queryGameServerList</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 更新运营活动的设置 -->
		<action name="updateMarketActivitySetting"
			class="com.hifun.soul.manageweb.marketactivity.MarketActivitySettingAction"
			method="updateMarketActivitySetting">
			<result name="success" >/marketactivity/activityList.jsp</result>
			<result name="failed" >/marketactivity/activityList.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 获取所有运营活动设置 -->
		<action name="queryAllMarketActivitySettings"
			class="com.hifun.soul.manageweb.marketactivity.MarketActivitySettingAction"
			method="queryAllMarketActivitySettings">
			<result name="success">/marketactivity/activityList.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- DB数据操作情况查询 -->
		<action name="queryDBEntityOperationInfo"
			class="com.hifun.soul.manageweb.action.RuntimeAction"
			method="queryDBEntityOperationInfo">
			<result name="success">/runtime/dbOperationInfo.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 停服 -->
		<action name="stopGameServer"
			class="com.hifun.soul.manageweb.action.GameServerListAction"
			method="stopGameServer">
			<result name="success" type="chain">queryGameServerList</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>	
		<!-- 更新运营活动的设置 -->
		<action name="updateLoginWallState"
			class="com.hifun.soul.manageweb.action.LoginWallAction"
			method="updateLoginWallState">
			<result name="success" >/runtime/loginWall.jsp</result>
			<result name="failed" >/runtime/loginWall.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 获取所有运营活动设置 -->
		<action name="queryLoginWallState"
			class="com.hifun.soul.manageweb.action.LoginWallAction"
			method="queryLoginWallState">
			<result name="success">/runtime/loginWall.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 查询管理服务器列表 -->
		<action name="queryManageServerList"
			class="com.hifun.soul.manageweb.action.GameServerListAction"
			method="queryManageServerList">
			<result name="success">/runtime/manageServerList.jsp</result>			
			<interceptor-ref name="defaultStack" />			
		</action>
		<!-- 查询管理服务器列表ByJson -->
		<action name="queryManageServerListByJson"
			class="com.hifun.soul.manageweb.action.GameServerListAction"
			method="queryManageServerListByJson">
			<result name="success" type="json">
				<param name="contentType">text/html</param>
				<param name="includeProperties">
					serverBaseInfoList
				</param>
			</result>
			<interceptor-ref name="jsonStack" />		
		</action>
		<!-- 切换管理服务器的连接 -->
		<action name="changeManageServer"
			class="com.hifun.soul.manageweb.action.GameServerListAction"
			method="changeManageServer">
			<result name="success" type="chain">queryManageServerList</result>
			<result name="failed" type="chain">queryManageServerList</result>
			<interceptor-ref name="defaultStack" />			
		</action>
	</package>
</struts>