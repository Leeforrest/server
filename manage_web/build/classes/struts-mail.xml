<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="struts-mail" extends="manage-base-package">
		<!-- 查询邮件发送列表 -->
		<action name="querySendMailList"
			class="com.hifun.soul.manageweb.mail.action.MailListAction" method="querySendMailList">
			<result name="success">/mail/sendMailList.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 发送邮件转向 -->
		<action name="sendMailForward"
			class="com.hifun.soul.manageweb.mail.action.SendMailAction" method="sendMailForward">
			<result name="success">/mail/sendMail.jsp</result>
			<interceptor-ref name="permission"></interceptor-ref>
		</action>

		<!-- 发送邮件 -->
		<action name="sendMail"
			class="com.hifun.soul.manageweb.mail.action.SendMailAction" method="sendMail">
			<result name="success" type="chain">querySendMailList</result>
			<result name="input">/mail/sendMail.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 发送邮件 -->
		<action name="copyMail"
			class="com.hifun.soul.manageweb.mail.action.SendMailAction" method="copyMail">
			<result name="success">/mail/sendMail.jsp</result>
			<result name="input" type="chain">querySendMailList</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 获取定时邮件列表 -->
		<action name="queryTimingMailList"
			class="com.hifun.soul.manageweb.mail.action.MailListAction" method="queryTimingMailList">
			<result name="success">/mail/mailDraftList.jsp</result>			
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 取消定时邮件的发送 -->
		<action name="cancelTimingMail"
			class="com.hifun.soul.manageweb.mail.action.MailListAction" method="cancelTimingMail">			
			<result name="success" type="chain">queryTimingMailList</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		
		<!-- 修改邮件跳转 -->
		<action name="updateTimingMailForward"
			class="com.hifun.soul.manageweb.mail.action.SendMailAction" method="updateTimingMailForward">
			<result name="success">/mail/sendMail.jsp</result>		
			<result name="failed" type="chain">queryTimingMailList</result>		
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 更新邮件 -->
		<action name="updateTimingMail"
			class="com.hifun.soul.manageweb.mail.action.SendMailAction" method="updateTimingMail">
			<result name="success" type="chain">queryTimingMailList</result>
			<result name="input">/mail/sendMail.jsp</result>
			<interceptor-ref name="defaultStack" />
			<interceptor-ref name="permission"></interceptor-ref>
		</action>
		<!-- 获取物品列表 -->
		<action name="querySimpleConsumeItems"
			class="com.hifun.soul.manageweb.mail.action.QuerySimpleItemsAction" method="querySimpleConsumeItems">
			<result name="success" type="json">
				<param name="contentType">text/html</param>
				<param name="includeProperties">
					items
				</param>
			</result>
			<interceptor-ref name="jsonStack" />		
		</action>
		<!-- 获取物品列表 -->
		<action name="querySimpleItemCategories"
			class="com.hifun.soul.manageweb.mail.action.QuerySimpleItemsAction" method="querySimpleItemCategories">
			<result name="success" type="json">
				<param name="contentType">text/html</param>
				<param name="includeProperties">
					categories
				</param>
			</result>
			<interceptor-ref name="jsonStack" />		
		</action>
	</package>
</struts>